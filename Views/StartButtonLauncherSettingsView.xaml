<UserControl x:Class="StartButtonLauncher.Views.StartButtonLauncherSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:StartButtonLauncher.Helpers">
    <StackPanel Margin="10" Orientation="Vertical">
        <TextBlock Text="Select button to launch Playnite:" 
                   Margin="0,0,0,10"
                   FontWeight="Bold"/>

        <ComboBox ItemsSource="{Binding Source={x:Static helpers:ButtonOptions.All}}" 
                  SelectedValue="{Binding Settings.SelectedButton, Mode=TwoWay}" 
                  DisplayMemberPath="Label"
                  SelectedValuePath="Value"
                  Margin="0,0,0,20"/>

        <CheckBox IsChecked="{Binding Settings.FocusBeforeFullscreen, Mode=TwoWay}"
          ToolTip="If enabled, Playnite Desktop will be brought to front before switching to fullscreen.">
            <TextBlock Text="Focus Playnite before fullscreen" />
        </CheckBox>

    </StackPanel>
</UserControl>